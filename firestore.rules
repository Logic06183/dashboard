rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write access to all collections for now
    // In a production app, you'd want to restrict this with authentication
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Orders collection
    match /orders/{orderId} {
      allow read, write: if true;
    }
    
    // Archived orders collection
    match /archivedOrders/{orderId} {
      allow read, write: if true;
    }
    
    // System configuration
    match /systemConfig/{configId} {
      allow read, write: if true;
    }
  }
}
